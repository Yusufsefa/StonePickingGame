<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".fragment.HomeFragment"
    android:background="@drawable/gradient_background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:drawableLeft="@drawable/ic_main_stone"
        android:drawablePadding="10dp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:text="Taş Toplama"
        android:textSize="50sp" />


    <Button
        android:id="@+id/btnFirstPrepareLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="#fff"
        android:layout_marginTop="120dp"
        android:text="1. Seviyeyi Oluştur" />


    <Button
        android:id="@+id/btnSecondPrepareLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="#fff"
        android:text="2. Seviyeyi Oluştur" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:background="#707070" />

    <Button
        android:id="@+id/btnPlayFirstLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:textColor="#fff"
        android:text="1. Seviyeyi Oyna" />

    <Button
        android:id="@+id/btnPlaySecondLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginHorizontal="20dp"
        android:text="2. Seviyeyi Oyna" />


</LinearLayout>